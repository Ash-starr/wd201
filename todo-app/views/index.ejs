<!DOCTYPE html>
<html lang="en">

<head>
   <meta charset="UTF-8">
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <meta name="csrf-token" content="<%= csrfToken %>">
   <title>TODO App</title>
   <script src="https://cdn.tailwindcss.com"></script>
   <link rel="stylesheet" href="./css/styles.css">

   <script>
      var token = document.querySelector(`meta[name="csrf-token"]`).getAttribute("content");
      const checkedOrNot = id => document.getElementById(`todo-checkbox-${id}`).checked;
      function updateTodo(id) {
         fetch(`/todos/${id}`, {
            method: 'put',
            headers: { 'Content-type': 'application/json' },
            body: JSON.stringify({
               completed: checkedOrNot(id),
               "_csrf": token,
            })
         }).then((res) => {
            if (res.ok) {
               window.location.reload();
            }
         }).catch((err) => console.log(err))
      }
      function deleteTodo(id) {
         fetch(`/todos/${id}`, {
            method: 'delete',
            headers: { 'Content-type': 'application/json' },
            body: JSON.stringify({
               "_csrf": token,
            })
         }).then((res) => {
            if (res.ok) {
               window.location.reload();
            }
         }).catch((err) => console.log(err))
      }
   </script>
</head>

<body>
   <div class="grid grid-cols-6">
      <div class="col-start-3 col-span-2">
         <%- include('header.ejs') %>

            <form id="todo-form" action="/todos" method="POST">
               <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
               <div class="flex gap-2 p-4">
                  <div class="flex-auto">
                     <input type="text" name="title" placeholder="What's next?"
                        class="border border-gray-300 rounded text-gray-900 w-full  p-2 text-sm" required />
                  </div>
                  <div class="flex-auto">
                     <input type="date" name="dueDate"
                        class="border border-gray-300 rounded text-gray-900 w-full  p-2 text-sm leading-4" required />
                  </div>
                  <div class="flex-none">
                     <button type="submit"
                        class="bg-green-600 text-white px-5 py-2 rounded font-medium py-1.5 mr-2 mb-2">Add</button>
                  </div>
               </div>
            </form>

            <%- include('todos.ejs', { title:"Overdue",countId:"count-overdue",data:overdue }) %>
               <%- include('todos.ejs', { title:"Due Today",countId:"count-due-today",data:dueToday }) %>
                  <%- include('todos.ejs', { title:"Due Later",countId:"count-due-later",data:dueLater }) %>
                     <%- include('todos.ejs', { title:"Completed Items",countId:"count-completed",data:completedItems })
                        %>
                        <%- include('footer.ejs') %>
      </div>
   </div>

</body>

</html>